<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.call_gp_now.Activity.DrListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="00dp"
                android:onClick="back"
                android:padding="17dp"

                android:src="@drawable/left_white_" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="Doctors(15)"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:id="@+id/shimmmar"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:src="@color/grayLite"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        />
                    <View
                        android:layout_width="300dp"

                        android:text="Dr Rafiuk Islam"
                        android:layout_marginTop="10dp"
                        android:background="@color/grayLite"
                        android:textColor="@android:color/black"
                        android:layout_height="30dp"
                        />

                    <View
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grayLite"
                        android:layout_height="30dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc"/>

                <View
                    android:layout_width="130dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grayLite"
                    android:layout_height="30dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_margin="10dp"

                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:src="@color/grayLite"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        />
                    <View
                        android:layout_width="300dp"

                        android:text="Dr Rafiuk Islam"
                        android:layout_marginTop="10dp"
                        android:background="@color/grayLite"
                        android:textColor="@android:color/black"
                        android:layout_height="30dp"
                        />

                    <View
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grayLite"
                        android:layout_height="30dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc"/>

                <View
                    android:layout_width="130dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grayLite"
                    android:layout_height="30dp"
                    />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:src="@color/grayLite"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        />
                    <View
                        android:layout_width="300dp"

                        android:text="Dr Rafiuk Islam"
                        android:layout_marginTop="10dp"
                        android:background="@color/grayLite"
                        android:textColor="@android:color/black"
                        android:layout_height="30dp"
                        />

                    <View
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grayLite"
                        android:layout_height="30dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc"/>

                <View
                    android:layout_width="130dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grayLite"
                    android:layout_height="30dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_margin="10dp"

                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:src="@color/grayLite"
                        android:layout_height="60dp"
                        android:id="@+id/profile"
                        android:layout_marginTop="10dp"
                        />
                    <View
                        android:layout_width="300dp"

                        android:text="Dr Rafiuk Islam"
                        android:layout_marginTop="10dp"
                        android:background="@color/grayLite"
                        android:textColor="@android:color/black"
                        android:layout_height="30dp"
                        />

                    <View
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/grayLite"
                        android:layout_height="30dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="#cccccc"/>

                <View
                    android:layout_width="130dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grayLite"
                    android:layout_height="30dp"
                    />


            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>
