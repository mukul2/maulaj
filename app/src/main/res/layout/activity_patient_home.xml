<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0.5dp"-->
<!--                android:layout_marginBottom="5dp"-->
<!--                android:alpha="0.5"-->
<!--                android:background="@color/colorPrimary" />-->

