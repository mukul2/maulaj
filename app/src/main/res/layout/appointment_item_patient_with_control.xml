<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="0dp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:src="@color/grayLite"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:id="@+id/img"


        android:layout_height="45dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="130dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:lines="1"
                android:text="Dr Name"
                android:id="@+id/tv_name"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Time"
                    android:lines="1"
                    android:id="@+id/tv_time"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:lines="1"
                    android:id="@+id/tv_date"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/cardVcall"
                android:padding="17dp"
                android:visibility="gone"

                android:layout_gravity="center"
                android:src="@drawable/video_camera"
                android:layout_height="50dp"
                app:tint="@color/white" />


            <ImageView
                android:id="@+id/cardAcall"
                android:visibility="gone"
                android:layout_width="50dp"
                android:padding="17dp"
                android:layout_gravity="center"
                android:src="@drawable/call_answer"
                android:layout_height="50dp"
                app:tint="@color/white" />

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    app:cardCornerRadius="13dp"
    android:layout_margin="2dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cardChat"
            android:layout_width="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/chat_white"
            android:layout_height="15dp"
            app:tint="@color/colorPrimary" />
    </LinearLayout>

</androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="13dp"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:id="@+id/cardPatientJoin"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"

                        android:src="@drawable/call_answer"
                        android:layout_height="15dp"
                        app:tint="@color/colorPrimary" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="JOIN"
                    android:visibility="gone"
                    android:paddingRight="15dp"
                    android:paddingLeft="05dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content">

                </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/cardMore"
                android:padding="17dp"
                android:visibility="gone"

                android:layout_gravity="center"
                android:src="@drawable/right_white"
                android:layout_height="50dp"
                app:tint="@color/colorPrimary" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>