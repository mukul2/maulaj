<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/shadow_curved"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:src="#cccccc"
            android:scaleType="centerCrop"
            android:id="@+id/img_profile"
            android:layout_margin="10dp"
            android:layout_height="60dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Dr Name"
                android:id="@+id/tv_dr_name"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="6 Months"
                android:id="@+id/tv_duration"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Expires 1 Sep 2020"
                android:id="@+id/tv_expires"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryVeryLite"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearNotVarified"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Payment is not Verified yet"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"

            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:id="@+id/linearVarified"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Call / Chat "
            android:textColor="@color/colorPrimary"
            android:padding="10dp"

            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="10dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/right_white"
            android:layout_gravity="center_vertical"
            android:layout_height="10dp"/>

    </LinearLayout>

</LinearLayout>